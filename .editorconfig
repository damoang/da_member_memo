# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_size = 2
# 공백 2개로 `br` 처리를 위해 줄 끝 공백은 제거하지 않아야 함
trim_trailing_whitespace = false

[*.{php,html,xml}]
indent_size = 4

[*.{js,ts,css,scss,less,json}]
indent_size = 2

[*.{neon,neon.dist}]
indent_size = 4
indent_style = tab
